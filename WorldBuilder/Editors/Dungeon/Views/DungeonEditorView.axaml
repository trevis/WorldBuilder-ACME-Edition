<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:WorldBuilder.Editors.Dungeon"
             xmlns:local="using:WorldBuilder.Editors.Dungeon.Views"
             xmlns:dh="using:DialogHostAvalonia"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="WorldBuilder.Editors.Dungeon.Views.DungeonEditorView"
             x:DataType="vm:DungeonEditorViewModel">

    <UserControl.Styles>
        <Style Selector="Button.dng-toolbar-btn">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="MinWidth" Value="0" />
            <Setter Property="Focusable" Value="False" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Foreground" Value="#8a7a9e" />
        </Style>
        <Style Selector="Button.dng-toolbar-btn:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#33ffffff" />
            <Setter Property="Foreground" Value="#c0b0d8" />
        </Style>
    </UserControl.Styles>

    <dh:DialogHost Identifier="DungeonDialogHost"
                   DialogMargin="0"
                   CloseOnClickAway="True"
                   OverlayBackground="#80000000">
        <DockPanel>
            <!-- Toolbar -->
            <Border DockPanel.Dock="Top"
                    Background="#120c22"
                    BorderBrush="#2a1d42"
                    BorderThickness="0,0,0,1"
                    Padding="4,2">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" Spacing="4" DockPanel.Dock="Left">
                        <Button Classes="dng-toolbar-btn"
                                Content="Open Dungeon..."
                                Command="{Binding OpenLandblockCommand}" />
                        <Button Classes="dng-toolbar-btn"
                                Content="New Dungeon..."
                                Command="{Binding NewDungeonCommand}" />
                        <Border Width="1" Background="#2a1d42" Margin="4,2" />
                        <TextBlock Text="{Binding StatusText}"
                                   VerticalAlignment="Center"
                                   FontSize="12"
                                   Foreground="#8a7a9e" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="8" DockPanel.Dock="Right" HorizontalAlignment="Right">
                        <!-- Object placement indicator -->
                        <Border Background="#33421d2a"
                                CornerRadius="4"
                                Padding="8,4"
                                IsVisible="{Binding IsObjectPlacementMode}">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="{Binding PlacementStatusText}"
                                           FontSize="11"
                                           Foreground="#bd7c4d"
                                           VerticalAlignment="Center" />
                                <Button Classes="dng-toolbar-btn"
                                        Content="Cancel"
                                        Command="{Binding CancelObjectPlacementCommand}"
                                        Foreground="#cc6666"
                                        FontSize="10" />
                            </StackPanel>
                        </Border>
                        <!-- Room placement indicator -->
                        <Border Background="#332a1d42"
                                CornerRadius="4"
                                Padding="8,4"
                                IsVisible="{Binding IsPlacementMode}">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="{Binding PlacementStatusText}"
                                           FontSize="11"
                                           Foreground="#7c4dbd"
                                           VerticalAlignment="Center" />
                                <Button Classes="dng-toolbar-btn"
                                        Content="Cancel"
                                        Command="{Binding CancelPlacementCommand}"
                                        Foreground="#cc6666"
                                        FontSize="10" />
                            </StackPanel>
                        </Border>
                        <TextBlock Text="{Binding CurrentPositionText}"
                                   VerticalAlignment="Center"
                                   FontSize="11"
                                   Foreground="#5a4a6e" />
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Status Bar -->
            <Border DockPanel.Dock="Bottom"
                    Background="#120c22"
                    BorderBrush="#2a1d42"
                    BorderThickness="0,1,0,0"
                    Padding="10,4">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Left"
                               FontSize="11"
                               Foreground="#8a7a9e"
                               VerticalAlignment="Center"
                               Text="Dungeon Editor" />
                    <TextBlock DockPanel.Dock="Right"
                               HorizontalAlignment="Right"
                               FontSize="11"
                               Foreground="#5a4a6e"
                               VerticalAlignment="Center">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="Cells: {0}">
                                <Binding Path="CellCount" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                    <TextBlock FontSize="11"
                               Foreground="#7c4dbd"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"
                               IsVisible="{Binding HasSelectedCell}"
                               Text="{Binding SelectedCellInfo}" />
                </DockPanel>
            </Border>

            <!-- Main content: Room Palette + Viewport + Properties -->
            <Grid ColumnDefinitions="260,Auto,*,Auto,220">
                <!-- Room Palette (left panel) -->
                <Border Grid.Column="0"
                        Background="#0e0a1a"
                        BorderBrush="#2a1d42"
                        BorderThickness="0,0,1,0">
                    <local:RoomPaletteView DataContext="{Binding RoomPalette}" />
                </Border>

                <!-- Left Splitter -->
                <GridSplitter Grid.Column="1" Width="4" Background="#2a1d42" />

                <!-- 3D Viewport -->
                <Grid Grid.Column="2">
                    <local:DungeonViewportControl />

                    <!-- Empty state overlay -->
                    <Border Background="#CC0a0614"
                            IsVisible="{Binding !HasDungeon}"
                            IsHitTestVisible="False">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="12">
                            <TextBlock Text="No dungeon loaded"
                                       FontSize="18"
                                       Foreground="#5a4a6e"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="Open or create a dungeon, then select a room from the palette"
                                       FontSize="12"
                                       Foreground="#3a2a4e"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Right Splitter -->
                <GridSplitter Grid.Column="3" Width="4" Background="#2a1d42"
                              IsVisible="{Binding HasSelectedCell}" />

                <!-- Cell Properties (right panel, shown when cell selected) -->
                <Border Grid.Column="4"
                        Background="#0e0a1a"
                        BorderBrush="#2a1d42"
                        BorderThickness="1,0,0,0"
                        IsVisible="{Binding HasSelectedCell}">
                    <DockPanel>
                        <Border DockPanel.Dock="Top"
                                Background="#16102a"
                                BorderBrush="#2a1d42"
                                BorderThickness="0,0,0,1"
                                Padding="8,6">
                            <TextBlock Text="Cell Properties"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#c0b0d8" />
                        </Border>

                        <ScrollViewer>
                            <StackPanel Spacing="8" Margin="8">
                                <!-- Cell Info -->
                                <TextBlock Text="{Binding SelectedCellInfo}"
                                           FontSize="10"
                                           Foreground="#8a7a9e"
                                           TextWrapping="Wrap" />

                                <!-- Delete -->
                                <Button Classes="dng-toolbar-btn"
                                        Content="Delete Cell"
                                        Command="{Binding DeleteSelectedCellCommand}"
                                        Foreground="#cc6666"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center" />

                                <Border Height="1" Background="#2a1d42" Margin="0,4" />

                                <!-- Transform Nudge -->
                                <TextBlock Text="Position" FontSize="11" Foreground="#8a7a9e" />

                                <Grid ColumnDefinitions="Auto,*,*" RowDefinitions="Auto,Auto,Auto" Margin="0,2">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="X" FontSize="10" Foreground="#5a4a6e" VerticalAlignment="Center" Margin="0,0,6,0" />
                                    <Button Grid.Row="0" Grid.Column="1" Classes="dng-toolbar-btn" Content="-1" Command="{Binding NudgeCellXNegCommand}" FontSize="10" Padding="4,2" />
                                    <Button Grid.Row="0" Grid.Column="2" Classes="dng-toolbar-btn" Content="+1" Command="{Binding NudgeCellXPosCommand}" FontSize="10" Padding="4,2" />

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Y" FontSize="10" Foreground="#5a4a6e" VerticalAlignment="Center" Margin="0,0,6,0" />
                                    <Button Grid.Row="1" Grid.Column="1" Classes="dng-toolbar-btn" Content="-1" Command="{Binding NudgeCellYNegCommand}" FontSize="10" Padding="4,2" />
                                    <Button Grid.Row="1" Grid.Column="2" Classes="dng-toolbar-btn" Content="+1" Command="{Binding NudgeCellYPosCommand}" FontSize="10" Padding="4,2" />

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Z" FontSize="10" Foreground="#5a4a6e" VerticalAlignment="Center" Margin="0,0,6,0" />
                                    <Button Grid.Row="2" Grid.Column="1" Classes="dng-toolbar-btn" Content="-1" Command="{Binding NudgeCellZNegCommand}" FontSize="10" Padding="4,2" />
                                    <Button Grid.Row="2" Grid.Column="2" Classes="dng-toolbar-btn" Content="+1" Command="{Binding NudgeCellZPosCommand}" FontSize="10" Padding="4,2" />
                                </Grid>

                                <Border Height="1" Background="#2a1d42" Margin="0,4" />

                                <!-- Rotation -->
                                <TextBlock Text="Rotation (Z axis)" FontSize="11" Foreground="#8a7a9e" />
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <Button Classes="dng-toolbar-btn" Content="-90" Command="{Binding RotateCellCWCommand}" FontSize="10" Padding="6,2" />
                                    <Button Classes="dng-toolbar-btn" Content="-45" Command="{Binding RotateCellCW45Command}" FontSize="10" Padding="6,2" />
                                    <Button Classes="dng-toolbar-btn" Content="+45" Command="{Binding RotateCellCCW45Command}" FontSize="10" Padding="6,2" />
                                    <Button Classes="dng-toolbar-btn" Content="+90" Command="{Binding RotateCellCCWCommand}" FontSize="10" Padding="6,2" />
                                </StackPanel>

                                <Border Height="1" Background="#2a1d42" Margin="0,4" />

                                <!-- Portal Management -->
                                <TextBlock Text="Portals" FontSize="11" Foreground="#8a7a9e" />
                                <Button Classes="dng-toolbar-btn"
                                        Content="Disconnect Last Portal"
                                        Command="{Binding DisconnectPortalCommand}"
                                        FontSize="10"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center" />

                                <Border Height="1" Background="#2a1d42" Margin="0,4" />

                                <!-- Static Object Placement -->
                                <TextBlock Text="Place Object" FontSize="11" Foreground="#8a7a9e" />
                                <Grid ColumnDefinitions="*,Auto" Margin="0,2">
                                    <TextBox Grid.Column="0"
                                             Text="{Binding ObjectIdInput}"
                                             Watermark="Hex ID (e.g. 02000001)"
                                             FontSize="10" />
                                    <Button Grid.Column="1"
                                            Classes="dng-toolbar-btn"
                                            Content="Place"
                                            Command="{Binding StartObjectPlacementCommand}"
                                            FontSize="10"
                                            Margin="4,0,0,0" />
                                </Grid>

                                <Border Height="1" Background="#2a1d42" Margin="0,4" />

                                <!-- Surfaces -->
                                <TextBlock Text="Surfaces (hex, comma-separated)" FontSize="11" Foreground="#8a7a9e" />
                                <TextBox Text="{Binding SelectedCellSurfaces}"
                                         FontSize="10"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="False" />
                                <Button Classes="dng-toolbar-btn"
                                        Content="Apply Surfaces"
                                        Command="{Binding ApplySurfacesCommand}"
                                        FontSize="10"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center" />
                            </StackPanel>
                        </ScrollViewer>
                    </DockPanel>
                </Border>
            </Grid>
        </DockPanel>
    </dh:DialogHost>
</UserControl>
