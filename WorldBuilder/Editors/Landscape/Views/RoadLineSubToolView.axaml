<UserControl
    x:Class="WorldBuilder.Editors.Landscape.Views.RoadLineSubToolView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:WorldBuilder.Editors.Landscape.ViewModels"
    d:DesignHeight="100"
    d:DesignWidth="280"
    x:CompileBindings="True"
    x:DataType="vm:RoadLineSubToolViewModel"
    mc:Ignorable="d">
    <StackPanel Spacing="8">
        <TextBlock
            Text="Click to set start point, then click again to draw a road line. Right-click to cancel."
            FontSize="11"
            Foreground="{DynamicResource SystemBaseMediumColor}"
            Opacity="0.7"
            TextWrapping="Wrap" />
    </StackPanel>
</UserControl>
