<UserControl
    x:Class="WorldBuilder.Editors.Landscape.Views.RotateObjectSubToolView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:WorldBuilder.Editors.Landscape.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="vm:RotateObjectSubToolViewModel"
    mc:Ignorable="d">
    <StackPanel Spacing="10">
        <TextBlock
            FontSize="14"
            FontWeight="SemiBold"
            Text="Rotate Tool" />

        <TextBlock
            FontSize="11"
            Foreground="{DynamicResource SystemBaseMediumColor}"
            Opacity="0.7"
            Text="Click to select an object.&#x0a;Click and drag horizontally to rotate.&#x0a;Drag left/right to change angle."
            TextWrapping="Wrap" />
    </StackPanel>
</UserControl>
