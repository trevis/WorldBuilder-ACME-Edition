<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:WorldBuilder.Editors.Landscape.ViewModels"
             xmlns:vp="using:WorldBuilder.Views.Components.Viewports"
             xmlns:docking="clr-namespace:WorldBuilder.Lib.Docking;assembly=WorldBuilder"
             xmlns:dockingViews="clr-namespace:WorldBuilder.Lib.Docking.Views;assembly=WorldBuilder"
             xmlns:converters="clr-namespace:WorldBuilder.Lib.Converters;assembly=WorldBuilder"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="WorldBuilder.Editors.Landscape.Views.LandscapeEditorView"
             x:DataType="vm:LandscapeEditorViewModel"
             DragDrop.AllowDrop="True">

    <UserControl.Resources>
        <converters:OrientationToColumnsConverter x:Key="OrientationToColumns" />
        <converters:OrientationToRowsConverter x:Key="OrientationToRows" />
    </UserControl.Resources>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Top Panels -->
        <Border Grid.Row="0"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="0,0,0,1"
                IsVisible="{Binding DockingManager.TopPanels.Count}">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding DockingManager.TopPanels}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="5" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="docking:DockablePanelViewModel">
                            <docking:DockablePanelView />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <Grid x:Name="MainGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" MinWidth="200" MaxWidth="500" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="250" MinWidth="200" MaxWidth="500" />
            </Grid.ColumnDefinitions>

            <!-- Left Panels -->
            <Border Grid.Column="0"
                    Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="0,0,1,0"
                    IsVisible="{Binding DockingManager.LeftPanels.Count}">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding DockingManager.LeftPanels}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Spacing="5" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="docking:DockablePanelViewModel">
                                <docking:DockablePanelView />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!--  Splitter between left panel and viewport  -->
        <GridSplitter Grid.Column="1"
                      Width="5"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Background="Transparent" />

        <!--  Main Viewport Area  -->
        <Grid Grid.Column="2" Background="Black">
            <!-- Center Panels -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!-- Toggle Orientation Button (Only visible if multiple panels) -->
                <Button Grid.Row="0"
                        HorizontalAlignment="Right"
                        Margin="4"
                        ZIndex="10"
                        Command="{Binding DockingManager.ToggleCenterOrientationCommand}"
                        IsVisible="{Binding DockingManager.CenterPanels.Count, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <TextBlock Text="&#x21BA;" ToolTip.Tip="Rotate Layout" />
                </Button>

                <ContentControl Grid.Row="1" Content="{Binding DockingManager.CenterPanels}">
                    <ContentControl.ContentTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid
                                            Columns="{Binding $parent[UserControl].((vm:LandscapeEditorViewModel)DataContext).DockingManager.CenterOrientation, Converter={StaticResource OrientationToColumns}}"
                                            Rows="{Binding $parent[UserControl].((vm:LandscapeEditorViewModel)DataContext).DockingManager.CenterOrientation, Converter={StaticResource OrientationToRows}}" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="docking:DockablePanelViewModel">
                                        <docking:DockablePanelView />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>
            </Grid>

            <!--  Overlay toggle toolbar  -->
            <Border
                Margin="0,8,0,0"
                Padding="4,2"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#CC1E1E1E"
                CornerRadius="4">
                <StackPanel Orientation="Horizontal" Spacing="2">
                    <ToggleButton
                        IsChecked="{Binding ShowGrid}"
                        ToolTip.Tip="Toggle Grid"
                        Padding="6,4"
                        FontSize="11"
                        MinWidth="0"
                        Focusable="False">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x2637;" FontSize="13" />
                            <TextBlock Text="Grid" VerticalAlignment="Center" />
                        </StackPanel>
                    </ToggleButton>
                    <ToggleButton
                        IsChecked="{Binding ShowStaticObjects}"
                        ToolTip.Tip="Toggle Static Objects"
                        Padding="6,4"
                        FontSize="11"
                        MinWidth="0"
                        Focusable="False">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x1F3E0;" FontSize="13" />
                            <TextBlock Text="Objects" VerticalAlignment="Center" />
                        </StackPanel>
                    </ToggleButton>
                    <ToggleButton
                        IsChecked="{Binding ShowScenery}"
                        ToolTip.Tip="Toggle Scenery"
                        Padding="6,4"
                        FontSize="11"
                        MinWidth="0"
                        Focusable="False">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x1F332;" FontSize="13" />
                            <TextBlock Text="Scenery" VerticalAlignment="Center" />
                        </StackPanel>
                    </ToggleButton>
                    <ToggleButton
                        IsChecked="{Binding ShowDungeons}"
                        ToolTip.Tip="Toggle Dungeon Geometry"
                        Padding="6,4"
                        FontSize="11"
                        MinWidth="0"
                        Focusable="False">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x1F573;" FontSize="13" />
                            <TextBlock Text="Dungeons" VerticalAlignment="Center" />
                        </StackPanel>
                    </ToggleButton>
                    <ToggleButton
                        IsChecked="{Binding ShowBuildingInteriors}"
                        ToolTip.Tip="Always show building interior geometry (even when camera is outside)"
                        Padding="6,4"
                        FontSize="11"
                        MinWidth="0"
                        Focusable="False">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x1F3DB;" FontSize="13" />
                            <TextBlock Text="Interiors" VerticalAlignment="Center" />
                        </StackPanel>
                    </ToggleButton>
                    <ToggleButton
                        IsChecked="{Binding ShowSlopeHighlight}"
                        ToolTip.Tip="Highlight Unwalkable Slopes"
                        Padding="6,4"
                        FontSize="11"
                        MinWidth="0"
                        Focusable="False">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x26A0;" FontSize="13" />
                            <TextBlock Text="Slopes" VerticalAlignment="Center" />
                        </StackPanel>
                    </ToggleButton>
                    <Border Width="1" Background="#44FFFFFF" Margin="4,2" />
                    <Button
                        ToolTip.Tip="Toggle Panels"
                        Padding="6,4"
                        FontSize="11"
                        MinWidth="0"
                        Focusable="False">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x1F5D4;" FontSize="13" />
                            <TextBlock Text="Panels" VerticalAlignment="Center" />
                        </StackPanel>
                        <Button.Flyout>
                            <Flyout Placement="Bottom">
                                <ItemsControl ItemsSource="{Binding DockingManager.AllPanels}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding Title}" IsChecked="{Binding IsVisible}" Margin="5,2" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                    <Border Width="1" Background="#44FFFFFF" Margin="4,2" />
                    <Button
                        Command="{Binding ResetCameraCommand}"
                        ToolTip.Tip="Reset Camera to Map Center"
                        Padding="6,4"
                        FontSize="11"
                        MinWidth="0"
                        Focusable="False">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x1F3AF;" FontSize="13" />
                            <TextBlock Text="Reset" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <Border Width="1" Background="#44FFFFFF" Margin="4,2" />
                    <Button
                        Command="{Binding ClearCacheCommand}"
                        ToolTip.Tip="Clear all caches (textures, terrain, GPU) and reload from DAT files"
                        Padding="6,4"
                        FontSize="11"
                        MinWidth="0"
                        Focusable="False">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x1F5D1;" FontSize="13" />
                            <TextBlock Text="Clear Cache" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!--  Position HUD  -->
            <Border
                Margin="8"
                Padding="6,3"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Background="#88000000"
                CornerRadius="4"
                IsHitTestVisible="False">
                <TextBlock
                    FontFamily="Consolas, Courier New"
                    FontSize="12"
                    Foreground="White"
                    Text="{Binding CurrentPositionText}" />
            </Border>
        </Grid>

            <!--  Splitter for tools panel  -->
            <GridSplitter Grid.Column="3"
                          Width="5"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="Transparent" />

            <!-- Right Panels -->
            <Border Grid.Column="4"
                    Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="1,0,0,0"
                    IsVisible="{Binding DockingManager.RightPanels.Count}">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding DockingManager.RightPanels}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Spacing="5" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="docking:DockablePanelViewModel">
                                <docking:DockablePanelView />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Bottom Panels -->
        <Border Grid.Row="2"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="0,1,0,0"
                IsVisible="{Binding DockingManager.BottomPanels.Count}">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding DockingManager.BottomPanels}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="5" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="docking:DockablePanelViewModel">
                            <docking:DockablePanelView />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Drop Ghosts -->
        <Border Name="LeftGhost" Grid.RowSpan="3" HorizontalAlignment="Left" Width="200" Background="#4400FFFF" IsVisible="False" IsHitTestVisible="False" />
        <Border Name="RightGhost" Grid.RowSpan="3" HorizontalAlignment="Right" Width="200" Background="#4400FFFF" IsVisible="False" IsHitTestVisible="False" />
        <Border Name="TopGhost" Grid.Row="0" VerticalAlignment="Top" Height="100" Background="#4400FFFF" IsVisible="False" IsHitTestVisible="False" />
        <Border Name="BottomGhost" Grid.Row="2" VerticalAlignment="Bottom" Height="100" Background="#4400FFFF" IsVisible="False" IsHitTestVisible="False" />
    </Grid>
</UserControl>
