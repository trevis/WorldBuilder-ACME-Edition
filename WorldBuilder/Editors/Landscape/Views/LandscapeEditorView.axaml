<views:Base3DView
    x:Class="WorldBuilder.Editors.Landscape.Views.LandscapeEditorView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:WorldBuilder.Views"
    xmlns:vm="using:WorldBuilder.Editors.Landscape.ViewModels"
    x:CompileBindings="True"
    x:DataType="vm:LandscapeEditorViewModel">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="280"
                MinWidth="180"
                MaxWidth="500" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition
                Width="250"
                MinWidth="150"
                MaxWidth="500" />
        </Grid.ColumnDefinitions>

        <!--  Left Panel: Object Browser  -->
        <Border
            Grid.Column="0"
            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
            BorderThickness="0,0,1,0">
            <DockPanel LastChildFill="True">
                <TextBlock
                    DockPanel.Dock="Top"
                    Margin="10,8,10,6"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Text="Object Browser" />
                <ContentControl Content="{Binding ObjectBrowser}" />
            </DockPanel>
        </Border>

        <!--  Splitter between left panel and viewport  -->
        <GridSplitter
            Grid.Column="1"
            Width="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Background="Transparent" />

        <!--  Main 3D viewport area  -->
        <Grid Grid.Column="2">
            <Panel
                x:Name="Viewport"
                Background="Transparent" />

            <!--  Overlay toggle toolbar  -->
            <Border
                Margin="8"
                Padding="4,2"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#CC1E1E1E"
                CornerRadius="4">
                <StackPanel Orientation="Horizontal" Spacing="2">
                    <ToggleButton
                        IsChecked="{Binding ShowGrid}"
                        ToolTip.Tip="Toggle Grid"
                        Padding="6,4"
                        FontSize="11"
                        MinWidth="0"
                        Focusable="False">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x2637;" FontSize="13" />
                            <TextBlock Text="Grid" VerticalAlignment="Center" />
                        </StackPanel>
                    </ToggleButton>
                    <ToggleButton
                        IsChecked="{Binding ShowStaticObjects}"
                        ToolTip.Tip="Toggle Static Objects"
                        Padding="6,4"
                        FontSize="11"
                        MinWidth="0"
                        Focusable="False">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x1F3E0;" FontSize="13" />
                            <TextBlock Text="Objects" VerticalAlignment="Center" />
                        </StackPanel>
                    </ToggleButton>
                    <ToggleButton
                        IsChecked="{Binding ShowScenery}"
                        ToolTip.Tip="Toggle Scenery"
                        Padding="6,4"
                        FontSize="11"
                        MinWidth="0"
                        Focusable="False">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x1F332;" FontSize="13" />
                            <TextBlock Text="Scenery" VerticalAlignment="Center" />
                        </StackPanel>
                    </ToggleButton>
                    <ToggleButton
                        IsChecked="{Binding ShowSlopeHighlight}"
                        ToolTip.Tip="Highlight Unwalkable Slopes"
                        Padding="6,4"
                        FontSize="11"
                        MinWidth="0"
                        Focusable="False">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="&#x26A0;" FontSize="13" />
                            <TextBlock Text="Slopes" VerticalAlignment="Center" />
                        </StackPanel>
                    </ToggleButton>
                </StackPanel>
            </Border>

            <!--  Position HUD  -->
            <Border
                Margin="8"
                Padding="6,3"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Background="#88000000"
                CornerRadius="4"
                IsHitTestVisible="False">
                <TextBlock
                    FontFamily="Consolas, Courier New"
                    FontSize="12"
                    Foreground="White"
                    Text="{Binding CurrentPositionText}" />
            </Border>
        </Grid>

        <!--  Splitter for tools panel  -->
        <GridSplitter
            Grid.Column="3"
            Width="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Background="Transparent" />

        <!--  Tools Panel with History at bottom  -->
        <Border
            Grid.Column="4"
            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
            BorderThickness="1,0,0,0">
            <DockPanel LastChildFill="True">

                <!--  Layers Panel  -->
                <Border
                    Padding="10"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="0,0,0,1"
                    DockPanel.Dock="Top">
                    <ContentControl Content="{Binding LayersPanel}" />
                </Border>
                <!--  History and Snapshot Panel  -->
                <Border
                    Padding="10"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="0,1,0,0"
                    DockPanel.Dock="Bottom">
                    <ContentControl Content="{Binding HistorySnapshotPanel}" />
                </Border>

                <!--  Tool Bar - horizontal tool selector  -->
                <Border
                    Padding="6"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="0,0,0,1"
                    DockPanel.Dock="Top">
                    <ItemsControl ItemsSource="{Binding Tools}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Margin="0,0,4,0"
                                    Padding="8,4"
                                    Classes.selected="{Binding IsSelected}"
                                    Command="{Binding $parent[Grid].((vm:LandscapeEditorViewModel)DataContext).SelectToolCommand}"
                                    CommandParameter="{Binding}"
                                    Focusable="False"
                                    ToolTip.Tip="{Binding Name}">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock FontSize="14" Text="{Binding IconGlyph}" />
                                        <TextBlock FontSize="11" VerticalAlignment="Center" Text="{Binding Name}" />
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <!--  Sub-Tool Bar - only shown for selected tool  -->
                <Border
                    Padding="6"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="0,0,0,1"
                    DockPanel.Dock="Top"
                    IsVisible="{Binding SelectedTool, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <ItemsControl ItemsSource="{Binding SelectedTool.AllSubTools}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Margin="0,0,4,4"
                                    Padding="6,3"
                                    Classes.selected="{Binding IsSelected}"
                                    Command="{Binding $parent[Grid].((vm:LandscapeEditorViewModel)DataContext).SelectSubToolCommand}"
                                    CommandParameter="{Binding}"
                                    Focusable="False"
                                    ToolTip.Tip="{Binding Name}">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock FontSize="13" Text="{Binding IconGlyph}" />
                                        <TextBlock FontSize="11" VerticalAlignment="Center" Text="{Binding Name}" />
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <!--  Sub-Tool Settings - fills remaining space  -->
                <ScrollViewer>
                    <StackPanel Margin="10" Spacing="10">
                        <ContentControl
                            HorizontalContentAlignment="Stretch"
                            Content="{Binding SelectedSubTool}"
                            IsVisible="{Binding SelectedSubTool, Converter={x:Static ObjectConverters.IsNotNull}}" />
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</views:Base3DView>