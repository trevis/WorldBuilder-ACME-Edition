<UserControl
    x:Class="WorldBuilder.Editors.Landscape.Views.ObjectBrowserView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:WorldBuilder.Editors.Landscape.ViewModels"
    d:DesignHeight="250"
    d:DesignWidth="280"
    x:CompileBindings="True"
    x:DataType="vm:ObjectBrowserViewModel"
    mc:Ignorable="d">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Spacing="4" Margin="4,2">
            <TextBox
                Watermark="Search hex ID (e.g. 02000001)"
                Text="{Binding SearchText}"
                FontSize="11"
                Padding="4,3" />

            <StackPanel Orientation="Horizontal" Spacing="8">
                <CheckBox Content="Setups" IsChecked="{Binding ShowSetups}" FontSize="11" Padding="2,0" />
                <CheckBox Content="GfxObj" IsChecked="{Binding ShowGfxObjs}" FontSize="11" Padding="2,0" />
                <CheckBox Content="Buildings" IsChecked="{Binding ShowBuildingsOnly}" FontSize="11" Padding="2,0" />
                <CheckBox Content="Scenery" IsChecked="{Binding ShowSceneryOnly}" FontSize="11" Padding="2,0" />
            </StackPanel>

            <TextBlock
                FontSize="10"
                Foreground="{DynamicResource SystemBaseMediumColor}"
                Opacity="0.7"
                Text="{Binding Status}"
                TextWrapping="Wrap" />
        </StackPanel>

        <ScrollViewer>
            <StackPanel Spacing="1" Margin="4,2">
                <!-- Setup objects -->
                <ItemsControl ItemsSource="{Binding FilteredSetupIds}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Content="{Binding StringFormat='Setup  0x{0:X8}'}"
                                Command="{Binding $parent[UserControl].((vm:ObjectBrowserViewModel)DataContext).SelectForPlacementCommand}"
                                CommandParameter="{Binding}"
                                HorizontalAlignment="Stretch"
                                Padding="4,2"
                                FontSize="10"
                                FontFamily="Consolas" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- GfxObj objects -->
                <ItemsControl ItemsSource="{Binding FilteredGfxObjIds}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Content="{Binding StringFormat='GfxObj 0x{0:X8}'}"
                                Command="{Binding $parent[UserControl].((vm:ObjectBrowserViewModel)DataContext).SelectForPlacementCommand}"
                                CommandParameter="{Binding}"
                                HorizontalAlignment="Stretch"
                                Padding="4,2"
                                FontSize="10"
                                FontFamily="Consolas" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
